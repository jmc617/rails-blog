<div class='card'>
<h2>edit blog</h2>
<div class= 'blog-content'>
<%= form_for @blog do |f| %>
    <div>Title</div>
    <div><%= f.text_field :title %></div>
    <div>Content</div>
    <div><%= f.text_area :content %></div>
    <div><%= f.submit "publish changes"%></div>
<%end%>
<%= link_to 'Delete', blog_path(@blog), method: :delete,
                         data: { confirm: 'Are you sure?' } %>
</div>
</div>
